<article class="gh-post {{post_class}}">
    <a class="gh-post-link" href="{{url}}">
        {{#if feature_image}}
            <figure class="gh-post-image">
                <img
                    srcset="{{img_url feature_image size="s"}} 300w,
                            {{img_url feature_image size="m"}} 600w,
                            {{img_url feature_image size="l"}} 1000w"
                    sizes="(max-width: 767px) 100vw, (max-width: 991px) 50vw, 33vw"
                    src="{{img_url feature_image size="m"}}"
                    alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                    loading="lazy"
                >
            </figure>
        {{else}}
            <div class="gh-post-image-placeholder"></div>
        {{/if}}

        <div class="gh-post-content">
            <h2 class="gh-post-title">{{title}}</h2>
            {{#if excerpt}}
                <p class="gh-post-excerpt">{{excerpt}}</p>
            {{/if}}
            <div class="gh-post-meta">
                <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM D, YYYY"}}</time>
            </div>
        </div>
    </a>
</article>
