{{!< default}}

{{#post}}
<main class="gh-main gh-outer">
    <div class="gh-inner">
        <article class="gh-article projects-article {{post_class}}">
            {{#match @page.show_title_and_feature_image}}
                <header class="gh-article-header gh-canvas">
                    <h1 class="gh-article-title">{{title}}</h1>
                    {{#if custom_excerpt}}
                        <p class="gh-article-excerpt">{{custom_excerpt}}</p>
                    {{/if}}
                    {{> "feature-image"}}
                </header>
            {{/match}}

            <section class="gh-content gh-canvas">
                {{content}}
            </section>
        </article>

{{!-- Writing Grid Section --}}
{{#get "posts" include="feature_image,excerpt"}}
  {{#if posts.length}}
    <section class="gh-section writings">
      <div class="gh-inner">
        <div class="writings-grid">
          {{#foreach posts}}
            <article class="writing-card">
              <a href="{{url}}" class="writing-link">
                <div class="writing-content">
                  <h3 class="writing-title">{{title}}</h3>
                  {{#if excerpt}}
                    <div class="writing-excerpt">{{excerpt}}</div>
                  {{/if}}
                  <div class="writing-meta">
                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMM D, YYYY"}}</time>
                  </div>
                </div>
                <div class="writing-media">
                  {{#if feature_image}}
                    <img 
                      srcset="{{img_url feature_image size="s"}} 300w,
                              {{img_url feature_image size="m"}} 600w"
                      sizes="(max-width: 767px) 100vw, 50vw"
                      src="{{img_url feature_image size="m"}}"
                      alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
                      loading="lazy"
                    >
                  {{else}}
                    <div class="writing-media-placeholder"></div>
                  {{/if}}
                </div>
              </a>
            </article>
          {{/foreach}}
        </div>
      </div>
    </section>
  {{/if}}
{{/get}}

</div>
</main>
{{/post}}

